CMTK_BINARY_DIR=@CMTK_BINARY_DIR_CONFIG@
CMTK_DATA_DIR=@CMTK_DATA_DIR_CONFIG@
TEMPLATE_DIR=@TEMPLATE_DIR_CONFIG@
 
# Get the cmtk_functions.sh script from the scripts/ directory in the CMTK source tree
. ${CMTK_BINARY_DIR}/cmtk_functions.sh
. ${CMTK_BINARY_DIR}/ncanda_setup.sh

#
# Setup input and output
#

export OUTDIR=$1
export INPUT_DWI6=$2
export INPUT_DWI60=$3

#
# 1 - Correct DWI motion and distortion
#

b0DTI6=${INPUT_DWI6}/image1.nii
b0DTI60=${INPUT_DWI60}/image01.nii
b0Unwarp=${OUTDIR}/dti60/b00.nii

if needs_update_and_lock ${b0Unwarp} ${b0DTI6} ${b0DTI60}; then    
    tmpdir=`mktemp -d`
    cmtk convertx --flip-y ${b0DTI6} ${tmpdir}/flip.nii
    cmtk correct_dwi_distortion_and_motion ${OUTDIR}/dti60/ ${tmpdir}/flip.nii ${b0DTI60}
    rm -rf ${tmpdir}
    lockfile_delete ${b0Unwarp}
fi

#
# 1 - reformat SRI24 fiber masks maps
#

FIBER_ROIS=`cd ${CMTK_DATA_DIR}/sri24/fiber_tracking/; ls sri24_*.nii* | sed 's/sri24_//g; s/\..*//g'`
for roi in ${FIBER_ROIS}; do
    inp=${CMTK_DATA_DIR}/sri24/fiber_tracking/sri24_${roi}.nii
    out=${OUTDIR}/reformat/subject_t1/sri24_direct/${roi}.nii
    
    if needs_update_and_lock ${out} ${inp} ${t1_sri24_warp}; then
	cmtk reformatx ${CMTK_GLOBAL_ARGS} --pv -o ${out} --floating ${inp} ${b0} ${fa_sri24_warp}
	lockfile_delete ${out}
    fi
done
