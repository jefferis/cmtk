CMTK_BINARY_DIR=@CMTK_BINARY_DIR_CONFIG@
CMTK_DATA_DIR=@CMTK_DATA_DIR_CONFIG@
TEMPLATE_DIR=@TEMPLATE_DIR_CONFIG@
 
# Get the cmtk_functions.sh script from the scripts/ directory in the CMTK source tree
source ${CMTK_BINARY_DIR}/cmtk_functions.sh
source ${CMTK_BINARY_DIR}/ncanda_setup.sh

#
# Setup input and output
#

export OUTDIR=$1

export INPUT_M1=$2
export INPUT_R1=$3
export INPUT_I1=$4

export INPUT_M2=$5
export INPUT_R2=$6
export INPUT_I2=$7

tmpdir=`mktemp -d`

cmtk imagemath --in ${INPUT_M1} ${INPUT_M2} --average --out ${tmpdir}/mavg.nii
fsl bet ${tmpdir}/mavg ${tmpdir}/mavg_strip -m

cmtk imagemath --in ${INPUT_R1} ${INPUT_I1} ${INPUT_R2} ${INPUT_I2} --complex-div --out ${tmpdir}/fmap_i.nii --pop --out ${tmpdir}/fmap_r.nii
fsl fslcomplex -complex ${tmpdir}/fmap_i.nii ${tmpdir}/fmap_r.nii ${tmpdir}/fmap_c.nii

fsl prelude -c ${tmpdir}/fmap_c -m ${tmpdir}/mavg_strip_mask -u ${tmpdir}/unwrap

cmtk imagemath --in ${tmpdir}/unwrap.nii --scalar-mul 500 --scalar-mul 0.159154943 --out ${tmpdir}/fieldmap_hz.nii

sform=`fsl fslorient -getsform  ${tmpdir}/mavg.nii`
fsl fslorient -setsform ${sform} ${tmpdir}/fieldmap_hz.nii*
