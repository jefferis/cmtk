CMTK_BINARY_DIR=@CMTK_BINARY_DIR_CONFIG@
CMTK_DATA_DIR=@CMTK_DATA_DIR_CONFIG@
TEMPLATE_DIR=@TEMPLATE_DIR_CONFIG@
 
# Get the cmtk_functions.sh script from the scripts/ directory in the CMTK source tree
source ${CMTK_BINARY_DIR}/cmtk_functions.sh
source ${CMTK_BINARY_DIR}/ncanda_setup.sh

#
# Setup input and output
#

export OUTDIR=$1

# first three - magnitude, real, imaginary of GRE 7ms
export INPUT_M1=$2
export INPUT_R1=$3
export INPUT_I1=$4

# first three - magnitude, real, imaginary of GRE 9ms
export INPUT_M2=$5
export INPUT_R2=$6
export INPUT_I2=$7

fieldmap=${OUTDIR}/fieldmap_hz.nii
if CMTK_needs_update_and_lock ${fieldmap} ${INPUT_R1} ${INPUT_I1} ${INPUT_R2} ${INPUT_I2}; then
    tmpdir=`mktemp -d`

    # put all input images into LAS order. FSL/PRELUDE seems to get confused otherwise
    cmtk reorient -o LAS ${INPUT_M1} ${tmpdir}/m1.nii
    cmtk reorient -o LAS ${INPUT_R1} ${tmpdir}/r1.nii
    cmtk reorient -o LAS ${INPUT_I1} ${tmpdir}/i1.nii
    cmtk reorient -o LAS ${INPUT_M2} ${tmpdir}/m2.nii
    cmtk reorient -o LAS ${INPUT_R2} ${tmpdir}/r2.nii
    cmtk reorient -o LAS ${INPUT_I2} ${tmpdir}/i2.nii

    # average magnitude images
    cmtk imagemath --in ${tmpdir}/m1.nii ${tmpdir}/m2.nii --average --out ${tmpdir}/mavg.nii

    # create brain mask from magnitude images
    fsl bet ${tmpdir}/mavg ${tmpdir}/mavg_strip -m -f 0.5 -g -0.0
    
    # compute complex phase ratio
    cmtk imagemath --in ${tmpdir}/r1.nii ${tmpdir}/i1.nii ${tmpdir}/r2.nii ${tmpdir}/i2.nii --complex-div --out ${tmpdir}/fmap_i.nii --pop --out ${tmpdir}/fmap_r.nii
    fsl fslcomplex -complex ${tmpdir}/fmap_r.nii ${tmpdir}/fmap_i.nii ${tmpdir}/fmap_c.nii
    
    # unwrap phase
    fsl prelude -c ${tmpdir}/fmap_c -m ${tmpdir}/mavg_strip_mask -u ${tmpdir}/unwrap
    
    # convert unwrapped phase from radians to Hz
    cmtk imagemath --in ${tmpdir}/unwrap.nii --scalar-mul 500 --scalar-mul -0.159154943 --out ${tmpdir}/fieldmap.nii
    
    # bring back into native orientation
    orient_native=`cmtk describe -m ${INPUT_M1} | fgrep ORIENT | cut -f2`
    cmtk reorient -o ${orient_native} ${tmpdir}/fieldmap.nii ${fieldmap}
    cmtk convertx --flip-x ${fieldmap} ${fieldmap}

    rm -rf ${tmpdir}

    CMTK_lockfile_delete ${fieldmap}
fi
